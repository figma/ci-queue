{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src"
  ],
  "exclude": [""],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  }
}
